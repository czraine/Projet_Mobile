<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Couleur de fond -->
    <solid android:color="#F5F5F5" /> <!-- Gris clair pour l'arrière-plan -->

    <!-- Bordure du champ d'entrée -->
    <stroke
        android:width="1dp"
        android:color="#DADADA" /> <!-- Gris pour la bordure -->

    <!-- Coins arrondis -->
    <corners android:radius="16dp" /> <!-- Coins arrondis de 16dp -->

    <!-- Padding interne (optionnel) -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>
