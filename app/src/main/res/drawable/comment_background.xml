<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Couleur de fond -->
    <solid android:color="#FFFFFF" />

    <!-- Bordure du commentaire -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- Couleur de la bordure -->

    <!-- Coins arrondis -->
    <corners android:radius="8dp" />

    <!-- Padding interne (optionnel) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
